<div class="container">
  <h1 class="title">アカウント登録</h1>
  <div class="row">
    <div class="input-field col s12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/error_messages", resource: resource %>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">person</i>
            <%= f.text_field :name %>
            <%= f.label :name %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= f.email_field :email, class: "validate autocomplete" %>
            <%= f.label :email %>
            <span class="helper-text" data-error="使用できないアドレスです" data-success="使用可能なメールアドレスです"></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :password %>
            <%= f.label :password %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :password_confirmation %>
            <%= f.label :password_confirmation %>
          </div>
        </div>
        <div class="row">
          <div class="actions input-field col s12">
            <%= f.submit "アカウント登録", class: "btn waves-effect waves-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= render "users/shared/links" %>
</div>
