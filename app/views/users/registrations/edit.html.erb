<div class="container">
  <h1 class="title">ユーザー編集</h1>
  <div class="row">
    <div class="input-field col s12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">person</i>
            <%= f.text_field :name %>
            <%= f.label :name %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= f.email_field :email %>
            <%= f.label :email %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :password %>
            <%= f.label :password %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :password_confirmation %>
            <%= f.label :password_confirmation %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :current_password %>
            <%= f.label :current_password %>
          </div>
        </div>
        <div class="row">
          <div class="actions input-field col s12">
            <%= f.submit "アカウント更新", class: "btn waves-effect waves-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col center">
      <%= link_to t('devise.shared.links.back'), :back, class: "waves-input-wrapper waves-effect waves-light btn" %>
    </div>
    <div class="col center">
      <%= link_to "ログアウト", destroy_user_session_path, data: { confirm: 'ログアウトしてもよろしいですか？' }, method: :delete, class: "waves-input-wrapper waves-effect waves-light btn" %>
    </div>
    <div class="col center">
      <%= link_to "アカウントを削除する", user_registration_path, data: { confirm: '本当に削除してもよろしいですか？' }, method: :delete, class: "waves-input-wrapper waves-effect waves-light btn" %>
    </div>
  </div>
</div>
